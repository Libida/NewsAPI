extends layouts/layout-base

block vars
    - const pageTitle = "Login"

block content

    .auth
        .auth-local
            +form({action: "/login"})

                +inputEmail()

                +inputPassword()

                +formBtn

        .auth-fb
            p.auth-fb-msg Or log in using Facebook
            .fb-login-button(data-width="300" data-size="small" data-button-type="login_with" data-auto-logout-link="false" data-use-continue-as="true")
